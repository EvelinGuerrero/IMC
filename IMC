<meta charset="UTF-8">

<h1> PROGRAMA CALCULO IMC</h1>

<script>

	function saltarlinea() {
		document.write("<br>");
		document.write("<br>");
		document.write("<br>");
	}

	function imprimir(frase){
		document.write(frase);
		saltarlinea();
	}

	function calcularImc(peso,altura) {
	
		return(peso/(altura*altura));
	}
	
	nombre=prompt("Ingrese su nombre")
	pesoInformado=prompt(nombre+", Informe su peso");
	alturaInformada=prompt(nombre+", Iforme su altura");

	imcCalculado= calcularImc(pesoInformado,alturaInformada);
	imprimir("El IMC de " +nombre+" calculado es: "+ imcCalculado);

</script>
